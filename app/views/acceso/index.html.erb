<h2>Por favor agregue aqui su credencial</h2>

<%= form_tag("/acceso", method: "post") do  %>
    <% if @verificacion.errors.any? %>
        <div id="error_explanation">
            <h2>There were some errors:</h2>
            <ul>
                <% @verificacion.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="field">
        <%= label_tag :Credencial, "Agregue su Credencial"%><br>
        <%= text_field_tag "verificacion['persona']",  @verificacion.persona %><br>
    </div>
    <div class="actions">
        <%= submit_tag("verificar") %>
    </div>
<% end %>
