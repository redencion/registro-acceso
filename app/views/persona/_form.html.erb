<div class="row">
    <div class="col s12">
        <%= form_with model: persona,  url: persona_path(persona) , local: true do |f| %>
            <% if persona.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(persona.errors.count, "error") %> No ha sido realizado el Registro de esta persona:</h2>
                    <ul>
                        <% persona.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
            <div class="row">
                <div class="input-field col s4">
                    <%= select("persona","organizacion_id", Organizacion.all.collect {|o| [ o.nombre, o.organizacion_id ]}, {prompt: 'Selecciona'})%>
                    <%= f.label :organizacion %>
                </div>
                <div class="input-field col s4">
                    <%= f.text_field :cedula, 'data-length': '10', id: "input_text" %>
                    <%= f.label :cedula, class:'active' %>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s4">
                    <%= f.text_field :nombre %>
                    <%= f.label :nombre %>
                </div>
                <div class="input-field col s4">
                    <%= f.text_field :apellido %>
                    <%= f.label :apellido %>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s4">
                    <%= f.text_field :credencial %>
                    <%= f.label :credencial %>
                </div>
                <div class="input-field col s4">
                    <%= f.check_box :estatus %>
                    <%= f.label :estatus %>
                </div>
            </div>
            <div class="actions">
                <button class="btn waves-effect waves-light" type="submit" >Registrar
                    <i class="material-icons right">send</i>
                </button>
            </div> 
        <% end %>
    </div>
</div>
<script>
var input = document.querySelector('form');
var url =  String(input.action);
  if (url.match(/\./g)) {
      var nueva_url = url.replace(/http:\/\/localhost:3000/g,"");
      input.action= nueva_url.replace(/\./g,"/");
  }
$(document).ready(function(){
     M.updateTextFields();
              
            
    $('.tooltipped').tooltip();
    $('select').formSelect();
              
});
</script>
