<p id="notice"><%= notice %></p>

<h1>Persona</h1>

<table>
  <thead>
    <tr>
      <th>Organizacion</th>
      <th>Cedula</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Credencial</th>
      <th>Fecha registro</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.organizacion %></td>
        <td><%= persona.cedula %></td>
        <td><%= persona.nombre %></td>
        <td><%= persona.apellido %></td>
        <td><%= persona.credencial %></td>
        <td><%= persona.fecha_registro %></td>
        <td><%= persona.estatus %></td>
        <td><%= link_to 'Mostrar', persona_mostrar_url(persona) %></td>
        <td><%= link_to 'Editar', persona_editar_url(persona) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Persona', persona_registrar_url %>
