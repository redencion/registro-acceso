<p id="notice"><%= notice %></p>

<h1>Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Persona</th>
      <th>Nombre</th>
      <th>Password digest</th>
      <th>Fecha registro</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.persona %></td>
        <td><%= usuario.nombre %></td>
        <td><%= usuario.password_digest %></td>
        <td><%= usuario.fecha_registro %></td>
        <td><%= usuario.estatus %></td>
        <td><%= link_to 'Show', usuario %></td>
        <td><%= link_to 'Edit', edit_usuario_path(usuario) %></td>
        <td><%= link_to 'Destroy', usuario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

