
<% if notice %>
    <script>
$(function() {
    M.toast({html:'<%= notice %>'}, 3000);
});
    </script>
<% end %>

<h1>Usuarios</h1>

 <%= link_to '<i class="material-icons"> add_circle_outline</i> '.html_safe, usuario_path  %>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Fecha registro</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuario.each do |usuario| %>
      <tr>
        <td><%= usuario.nombre %></td>
        <td><%= usuario.correo %></td>
        <td><%= usuario.fecha_registro %></td>
        <td><%= usuario.estatus %></td>
        <td><%= link_to  '<i class="material-icons"> add_circle_outline</i>'.html_safe, usuario_path  %> </td>
        <td><%= link_to '<i class="material-icons"> create </i>'.html_safe, usuario_editar_path(usuario) %></td>
        <td><%= link_to '<i class="material-icons"> delete </i>'.html_safe, usuario, method: :delete, data: { confirm: '¿ Estás seguro de querer eliminar el usuario?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo', usuario_path %>
